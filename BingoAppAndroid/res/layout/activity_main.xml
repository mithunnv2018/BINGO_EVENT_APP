<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnshowlogin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/intro_bing01"
        android:text="Button" />

    <ImageView
        android:id="@+id/imageViewEvent1"
        style="@style/introimageslogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/intro_twitter" />

    <ImageView
        android:id="@+id/imageViewFB"
        style="@style/introimageslogo"
        
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/Button1"
        android:src="@drawable/intro_facebook" />

    <ImageButton
        android:id="@+id/imageButton1"
        style="@style/introimageslogo"
         
        android:layout_alignLeft="@+id/imageViewFB"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="28dp"
        android:src="@drawable/intro_google_plus2" />

    <ImageView
        android:id="@+id/imageViewEvent3"
        style="@style/introimageslogo"
         
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignLeft="@+id/imageViewEvent2"
        android:src="@drawable/intro_foursquare" />

    <ImageView
        android:id="@+id/imageViewEvent2"
        style="@style/introimageslogo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Button1"
        android:src="@drawable/intro_instagram" />

</RelativeLayout>
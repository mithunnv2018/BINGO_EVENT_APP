<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomePage_Activity" >

    <Button
        android:id="@+id/btnshowlogin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/intro_bing01"
        android:text="Button" />

    <ImageView
        android:id="@+id/imageViewFB"
        style="@style/introimageslogo"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/Button1"
        android:src="@drawable/intro_facebook" />

    <ImageView
        android:id="@+id/imageViewEvent3"
        style="@style/introimageslogo"
        android:layout_alignBottom="@+id/ImageViewEvent5"
        android:layout_alignLeft="@+id/imageViewEvent2"
        android:src="@drawable/event_first" />

    <ImageView
        android:id="@+id/imageViewEvent1"
        style="@style/introimageslogo"
        android:layout_below="@+id/imageViewFB"
        android:layout_centerHorizontal="true"
        android:src="@drawable/event_first" />

    <ImageView
        android:id="@+id/imageViewEvent2"
        style="@style/introimageslogo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageViewEvent1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/event_first" />

    <ImageView
        android:id="@+id/ImageViewEvent5"
        style="@style/introimageslogo"
        android:layout_below="@+id/btnshowlogin"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/btnshowlogin"
        android:src="@drawable/event_first" />

 
    <ImageView
        android:id="@+id/imageViewEvent6"
        style="@style/introimageslogo"
        android:layout_alignLeft="@+id/imageViewFB"
        android:layout_below="@+id/imageViewEvent1"
        android:src="@drawable/event_first" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewEvent6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/introimageslogo"
            android:src="@drawable/menu_profile_" 
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/imageView2"
            style="@style/introimageslogo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="51dp"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/menu_home" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/introimageslogo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu_setting" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewEvent4"
        style="@style/introimageslogo"
        android:layout_above="@+id/relativeLayout1"
        android:layout_alignLeft="@+id/imageViewEvent1"
        android:src="@drawable/event_first" />

</RelativeLayout>